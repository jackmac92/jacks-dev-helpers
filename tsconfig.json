{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~src/*": [ "./src/*" ]
        },
        "outDir": "tsbuild",
        "target": "es2020",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "./src/*.d.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
